@model IEnumerable<HotelManagementSystem.Models.Room>
@{
    ViewData["Title"] = "Manage Rooms";
    Layout = "_Layout";
}

<div class="container mx-auto p-6">
    <h2 class="text-2xl font-bold mb-6">Manage Rooms</h2>

    <a asp-action="CreateRoom" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">
        Create New Room
    </a>

    <table class="min-w-full bg-white">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">Room Type</th>
                <th class="py-2 px-4 border-b">Price Per Night</th>
                <th class="py-2 px-4 border-b">Availability</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td class="py-2 px-4 border-b">@room.RoomType</td>
                    <td class="py-2 px-4 border-b">$@room.PricePerNight</td>
                    <td class="py-2 px-4 border-b">@(room.IsAvailable ? "Available" : "Booked")</td>
                    <td class="py-2 px-4 border-b">
                        <a asp-action="EditRoom" asp-route-id="@room.RoomId" class="text-blue-500 hover:text-blue-700">Edit</a> |
                        <a asp-action="DeleteRoom" asp-route-id="@room.RoomId" class="text-red-500 hover:text-red-700">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

