@model HotelManagementSystem.Models.Room
@{
    ViewData["Title"] = "Manage Room";
    Layout = "_Layout";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">@(Model.RoomId == 0 ? "Create" : "Edit") Room</h1>

    <form asp-action="@(Model.RoomId == 0 ? "CreateRoom" : "EditRoom")" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <input type="hidden" asp-for="RoomId" />

        <div class="mb-4">
            <label asp-for="RoomType" class="block text-gray-700 text-sm font-bold mb-2">Room Type</label>
            <input asp-for="RoomType" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="RoomType" class="text-red-500 text-xs italic"></span>
        </div>

        <div class="mb-4">
            <label asp-for="PricePerNight" class="block text-gray-700 text-sm font-bold mb-2">Price Per Night</label>
            <input asp-for="PricePerNight" type="number" step="0.01" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="PricePerNight" class="text-red-500 text-xs italic"></span>
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">
                <input asp-for="IsAvailable" type="checkbox" class="mr-2 leading-tight">
                <span class="text-sm">Is Available</span>
            </label>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                @(Model.RoomId == 0 ? "Create" : "Update") Room
            </button>
            <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

