@model IEnumerable<HotelManagementSystem.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">User Management</h1>

    <table class="min-w-full bg-white">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">Full Name</th>
                <th class="py-2 px-4 border-b">Email</th>
                <th class="py-2 px-4 border-b">Admin Status</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="py-2 px-4 border-b">@user.FullName</td>
                    <td class="py-2 px-4 border-b">@user.Email</td>
                    <td class="py-2 px-4 border-b">@(user.IsAdmin ? "Admin" : "User")</td>
                    <td class="py-2 px-4 border-b">
                        <form asp-controller="User" asp-action="ToggleAdminStatus" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">
                                @(user.IsAdmin ? "Remove Admin" : "Make Admin")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

