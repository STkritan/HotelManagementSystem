@model IEnumerable<HotelManagementSystem.Models.Room>
@{
    ViewData["Title"] = "Manage Rooms";
    Layout = "_Layout";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Manage Rooms</h1>

    <div class="mb-4">
        <a asp-action="ManageRoom" asp-controller="Admin" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            Create New Room
        </a>
    </div>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Room Type</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Price Per Night</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Availability</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-300">@room.RoomType</td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-300">$@room.PricePerNight</td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-300">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(room.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                @(room.IsAvailable ? "Available" : "Not Available")
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-300">
                            <a asp-action="ManageRoom" asp-controller="Admin" asp-route-id="@room.RoomId" class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                            <a asp-action="DeleteRoom" asp-controller="Admin" asp-route-id="@room.RoomId" class="text-red-600 hover:text-red-900" onclick="return confirm('Are you sure you want to delete this room?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

