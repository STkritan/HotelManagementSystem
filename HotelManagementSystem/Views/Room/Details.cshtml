@model HotelManagementSystem.Models.Room
@{
    ViewData["Title"] = "Room Details";
    Layout = "_Layout";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Room Details</h1>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <h2 class="text-xl font-bold">@Model.RoomType</h2>
        </div>
        <div class="mb-4">
            <p><strong>Price per night:</strong> $@Model.PricePerNight</p>
        </div>
        <div class="mb-4">
            <p><strong>Availability:</strong> @(Model.IsAvailable ? "Available" : "Not Available")</p>
        </div>

        <div class="flex items-center justify-between">
            @if (Model.IsAvailable)
            {
                <a asp-controller="Booking" asp-action="Create" asp-route-roomId="@Model.RoomId" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Book Now
                </a>
            }
            <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Back to Room List
            </a>
        </div>
    </div>
</div>

