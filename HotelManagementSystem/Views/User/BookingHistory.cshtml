@model IEnumerable<HotelManagementSystem.Models.Booking>

<h2>Booking History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room Type</th>
            <th>Check-In Date</th>
            <th>Check-Out Date</th>
            <th>Total Price</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Room.RoomType</td>
                <td>@booking.CheckInDate.ToShortDateString()</td>
                <td>@booking.CheckOutDate.ToShortDateString()</td>
                <td>@booking.TotalPrice.ToString("C")</td>
                <td>@(booking.IsCancelled ? "Cancelled" : "Active")</td>
            </tr>
        }
    </tbody>
</table>

