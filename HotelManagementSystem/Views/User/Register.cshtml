@model HotelManagementSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container mx-auto p-6">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4">
            <h2 class="text-2xl font-bold text-center mb-4">Register</h2>
            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label asp-for="FullName" class="block text-gray-700 text-sm font-bold mb-2">Full Name</label>
                    <input asp-for="FullName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required aria-required="true">
                    <span asp-validation-for="FullName" class="text-red-500 text-xs italic"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                    <input asp-for="Email" type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required aria-required="true">
                    <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                    <input asp-for="Password" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required aria-required="true">
                    <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required aria-required="true">
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs italic"></span>
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Register
                    </button>
                    <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" asp-action="Login">
                        Already have an account? Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

