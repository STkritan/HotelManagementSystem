@{
    ViewData["Title"] = "Home";
}

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-8">
        <h1 class="text-4xl font-bold mb-6 text-center text-gray-800">Welcome to Hotel Management System</h1>
        <p class="text-xl mb-8 text-center text-gray-600">Find your perfect stay with us.</p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-blue-100 p-6 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105">
                <h2 class="text-2xl font-semibold mb-4 text-blue-800">Browse Rooms</h2>
                <p class="mb-4 text-blue-600">Explore our wide range of comfortable and luxurious rooms.</p>
                <a asp-controller="Room" asp-action="Index" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                    View Rooms
                </a>
            </div>

            <div class="bg-green-100 p-6 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105">
                <h2 class="text-2xl font-semibold mb-4 text-green-800">Make a Booking</h2>
                <p class="mb-4 text-green-600">Ready to book your stay? Start your reservation now.</p>
                <a asp-controller="Booking" asp-action="Create" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                    Book Now
                </a>
            </div>

            <div class="bg-purple-100 p-6 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105">
                <h2 class="text-2xl font-semibold mb-4 text-purple-800">Your Account</h2>
                <p class="mb-4 text-purple-600">Manage your bookings and account information.</p>
                <a asp-controller="User" asp-action="Dashboard" class="bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                    My Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

